{
  "manifest_version": 2,
  "name": "Website Blocker",
  "version": "1.0",
  "description": "Block distracting sites and boost your productivity.",
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "<all_urls>",
    "storage",
    "alarms",
    "notifications"
  ],
  "background": {
    "scripts": [
      "common.js",
      "background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_popup": "popup.html"
  }
}